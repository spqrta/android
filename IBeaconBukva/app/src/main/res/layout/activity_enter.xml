<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.qtran.qbeacon.EnterActivity"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/welcome"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal" />

        <ImageButton
            android:background="@null"
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/main_item_1"
            android:visibility="visible"
            android:layout_below="@+id/imageView1"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" />

        <ImageButton
            android:id="@+id/btnCoat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/main_item_2"
            android:visibility="visible"
            android:layout_below="@+id/btnShoes"
            android:layout_alignLeft="@+id/btnShoes"
            android:layout_alignStart="@+id/btnShoes"
            android:layout_gravity="center_horizontal" />

        <ImageButton
            android:id="@+id/btnShoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/main_item_3"
            android:visibility="visible"
            android:layout_below="@+id/imageButton2"
            android:layout_alignRight="@+id/imageButton2"
            android:layout_alignEnd="@+id/imageButton2"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</RelativeLayout>
